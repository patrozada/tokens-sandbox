{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
        "transformGroup": "css",
        "prefix": "sd",
        "buildPath": "src/build/css/",
        "files": [
          {
            "destination": "_variables.css",
            "format": "css/variables"
          }
        ]
      },
    "js": {
        "transformGroup": "js",
        "buildPath": "src/build/js/",
        "files": [
          {
            "destination": "variables.js",
            "format": "javascript/es6"
          }
        ]
      }
  }
}
